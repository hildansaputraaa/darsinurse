   ============================================================ */

.fall-alert-container {
  position: fixed;
  top: 80px;
  right: 10px;
  z-index: 9999;
  max-width: 380px;
  width: calc(100% - 20px);
}

.fall-alert {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border: 3px solid #ff0000;
  border-radius: 10px;
  padding: 1.2rem;
  margin-bottom: 1rem;
  box-shadow: 0 8px 32px rgba(255, 0, 0, 0.35);
  animation: slideInShake 0.6s ease-out;
  color: white;
}

@keyframes slideInShake {
  0% {
    transform: translateX(400px);
    opacity: 0;
  }
  50% {
    transform: translateX(-15px);
  }
  75% {
    transform: translateX(8px);
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideOut {
  from {
    transform: translateX(0);
    opacity: 1;
  }
  to {
    transform: translateX(400px);
    opacity: 0;
  }
}

.fall-alert-header {
  display: flex;
