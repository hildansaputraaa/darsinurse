      setTimeout(() => {
        alertDiv.remove();
        activeAlertsCount--;
        
        // Remove from tracking
        displayedAlerts.delete(`fall-${alertId}`);
        
        // Stop audio only if no more alerts
        stopAlertSound();

        // Jika masih ada alert lain, restart audio
        if (activeAlertsCount > 0) {
          setTimeout(() => playAlertSound(), 500);
        }
        
        updateBadgeCount();
      }, 300);
    }

    // ============================================
