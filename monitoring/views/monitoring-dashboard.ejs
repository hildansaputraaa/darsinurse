    function playAlertSound() {
      if (!audioContext || !alertAudioBuffer) {
        console.warn('âš ï¸ Audio not initialized');
        initializeAudio();
        return;
      }
      
      // âœ… Don't play if already playing
      if (isAudioPlaying) {
        console.log('ðŸ”Š Audio already playing');
        return;
      }
      
      // Stop existing audio first (safety)
      if (audioSource) {
        stopAlertSound();
      }
      
      try {
        // Resume context if suspended
        if (audioContext.state === 'suspended') {
          audioContext.resume();
        }
        
        // Create and start source
        audioSource = audioContext.createBufferSource();
        audioSource.buffer = alertAudioBuffer;
        audioSource.loop = true; // Loop the sound
        audioSource.connect(audioContext.destination);
        audioSource.start(0);
        
        isAudioPlaying = true; // âœ… Mark as playing
        
        console.log('ðŸ”Š Alert sound started (looping)');
      } catch (err) {
        console.error('âŒ Audio play error:', err);
        isAudioPlaying = false;
      }
    }

    function stopAlertSound() {
      if (audioSource) {
        try {
          audioSource.stop();
          audioSource.disconnect();
          console.log('ðŸ”‡ Alert sound stopped');
        } catch (err) {
          console.warn('âš ï¸ Audio stop error:', err);
        }
        audioSource = null;
