<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vitals API - Monitoring & Configuration</title>
  <link rel="icon" type="image/png" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>üìä</text></svg>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-green: #00B14F;
      --secondary-green: #008a3d;
      --primary-blue: #0056b3;
      --danger-red: #dc3545;
      --warning-yellow: #ffc107;
      --light-bg: #f0f8f7;
      --dark-text: #1a3a3a;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: var(--dark-text);
      background: #ffffff;
      min-height: 100vh;
    }

    .top-header {
      background: rgba(255, 255, 255, 0.98);
      padding: 0.875rem 0;
      box-shadow: 0 2px 20px rgba(0,0,0,0.08);
      position: sticky;
      top: 0;
      z-index: 1000;
      border-bottom: 1px solid rgba(0, 177, 79, 0.1);
    }

    .logo-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .logo-info h1 {
      font-size: 22px;
      font-weight: 800;
      color: #1a3a3a;
      margin: 0;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 14px;
    }

    .status-badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
    }

    .status-healthy {
      background: rgba(0, 177, 79, 0.1);
      color: var(--primary-green);
    }

    .status-unhealthy {
      background: rgba(220, 53, 69, 0.1);
      color: var(--danger-red);
    }

    .status-warning {
      background: rgba(255, 193, 7, 0.1);
      color: #856404;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      border: 2px solid #e0e0e0;
      border-radius: 12px;
      padding: 20px;
      transition: all 0.3s ease;
      text-align: center;
    }

    .stat-card:hover {
      border-color: var(--primary-green);
      box-shadow: 0 4px 12px rgba(0, 177, 79, 0.1);
    }

    .stat-icon {
      font-size: 32px;
      color: var(--primary-green);
      margin-bottom: 10px;
    }

    .stat-label {
      font-size: 13px;
      color: #6c757d;
      font-weight: 500;
      margin-bottom: 8px;
    }

    .stat-number {
      font-size: 28px;
      font-weight: 800;
      color: var(--dark-text);
    }

    .stat-change {
      font-size: 12px;
      color: #6c757d;
      margin-top: 5px;
    }

    .data-container {
      background: white;
      border: 1px solid #e0e0e0;
      border-radius: 12px;
      overflow: hidden;
      margin-bottom: 30px;
    }

    .data-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      border-bottom: 1px solid #e0e0e0;
      background: var(--light-bg);
    }

    .data-header h3 {
      margin: 0;
      font-size: 16px;
      font-weight: 700;
      color: var(--dark-text);
    }

    .refresh-btn {
      background: var(--primary-green);
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 13px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .refresh-btn:hover {
      background: var(--secondary-green);
      transform: translateY(-2px);
    }

    .data-body {
      padding: 20px;
    }

    .data-table {
      width: 100%;
      border-collapse: collapse;
    }

    .data-table th {
      background: var(--light-bg);
      padding: 12px;
      text-align: left;
      font-weight: 600;
      font-size: 13px;
      color: var(--dark-text);
      border-bottom: 2px solid var(--primary-green);
    }

    .data-table td {
      padding: 12px;
      border-bottom: 1px solid #e0e0e0;
      font-size: 13px;
    }

    .data-table tr:hover {
      background: var(--light-bg);
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: 600;
      color: var(--dark-text);
      margin-bottom: 8px;
    }

    .form-control {
      border: 1px solid #e0e0e0;
      border-radius: 6px;
      padding: 10px 12px;
      font-size: 13px;
    }

    .form-control:focus {
      border-color: var(--primary-green);
      box-shadow: 0 0 0 0.2rem rgba(0, 177, 79, 0.1);
    }

    .btn-primary {
      background: var(--primary-green);
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: var(--secondary-green);
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: #6c757d;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      color: white;
    }

    .btn-secondary:hover {
      background: #5a6268;
    }

    .alert {
      padding: 12px 16px;
      border-radius: 6px;
      margin-bottom: 20px;
      border-left: 4px solid;
    }

    .alert-success {
      background: rgba(0, 177, 79, 0.1);
      color: var(--secondary-green);
      border-left-color: var(--primary-green);
    }

    .alert-danger {
      background: rgba(220, 53, 69, 0.1);
      color: var(--danger-red);
      border-left-color: var(--danger-red);
    }

    .alert-info {
      background: rgba(0, 86, 179, 0.1);
      color: var(--primary-blue);
      border-left-color: var(--primary-blue);
    }

    .config-section {
      background: white;
      border: 1px solid #e0e0e0;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 30px;
    }

    .config-section h4 {
      font-size: 16px;
      font-weight: 700;
      color: var(--dark-text);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .ingestion-list {
      list-style: none;
      padding: 0;
    }

    .ingestion-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px;
      border-bottom: 1px solid #e0e0e0;
      font-size: 13px;
    }

    .ingestion-item:last-child {
      border-bottom: none;
    }

    .ingestion-label {
      font-weight: 500;
      color: var(--dark-text);
    }

    .ingestion-value {
      color: var(--primary-green);
      font-weight: 600;
    }

    .spinner {
      display: inline-block;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .main-container {
      padding: 30px 20px;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="top-header">
    <div class="container-fluid">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <div class="logo-info">
          <i class="fas fa-heartbeat"></i>
          <h1>Vitals API Monitoring</h1>
        </div>
        <div class="user-info">
          <span><i class="fas fa-user"></i> <%= nama_perawat %></span>
          <span>|</span>
          <a href="/" style="text-decoration: none; color: #495057;">
            <i class="fas fa-arrow-left"></i> Dashboard
          </a>
          <span>|</span>
          <a href="/logout" style="text-decoration: none; color: var(--danger-red);" onclick="return confirm('Yakin logout?')">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container-fluid main-container">
    <div id="alerts-container"></div>

    <!-- Service Status -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon"><i class="fas fa-server"></i></div>
        <div class="stat-label">Service Status</div>
        <div id="service-status" class="stat-number">-</div>
        <div id="service-status-time" class="stat-change">Last check: -</div>
      </div>

      <div class="stat-card">
        <div class="stat-icon"><i class="fas fa-chart-line"></i></div>
        <div class="stat-label">Data Points Today</div>
        <div id="data-points-count" class="stat-number">-</div>
        <div class="stat-change">Entries</div>
      </div>

      <div class="stat-card">
        <div class="stat-icon"><i class="fas fa-exclamation-triangle"></i></div>
        <div class="stat-label">Fall Detections</div>
        <div id="fall-detections-count" class="stat-number">-</div>
        <div class="stat-change">Events</div>
      </div>

      <div class="stat-card">
        <div class="stat-icon"><i class="fas fa-wifi"></i></div>
        <div class="stat-label">MQTT Status</div>
        <div id="mqtt-status" class="stat-number">-</div>
        <div class="stat-change">Connection</div>
      </div>
    </div>

    <!-- MQTT Configuration -->
    <div class="config-section">
      <h4><i class="fas fa-cog"></i> MQTT Configuration</h4>
      <form id="mqtt-config-form">
        <div class="row">
          <div class="form-group">
            <label for="mqtt-url">MQTT Broker URL</label>
            <input type="text" class="form-control" id="mqtt-url" placeholder="mqtt://broker:1883" required>
          </div>
          <div class="form-group">
            <label for="mqtt-username">Username</label>
            <input type="text" class="form-control" id="mqtt-username" placeholder="MEDLOC" required>
          </div>
        </div>
        <div class="row">
          <div class="form-group">
            <label for="mqtt-password">Password</label>
            <input type="password" class="form-control" id="mqtt-password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
          </div>
          <div class="form-group">
            <label for="fallback-emr">Fallback EMR</label>
            <input type="text" class="form-control" id="fallback-emr" placeholder="UNASSIGNED" required>
          </div>
        </div>
        <div style="display: flex; gap: 10px;">
          <button type="submit" class="btn-primary"><i class="fas fa-save"></i> Save Configuration</button>
          <button type="button" class="btn-secondary" onclick="loadMQTTConfig()"><i class="fas fa-sync"></i> Reload</button>
        </div>
      </form>
    </div>

    <!-- Ingestion Statistics -->
    <div class="data-container">
      <div class="data-header">
        <h3><i class="fas fa-chart-bar"></i> Ingestion Statistics</h3>
        <button class="refresh-btn" onclick="loadIngestionStats()">
          <i class="fas fa-sync"></i> Refresh
        </button>
      </div>
      <div class="data-body">
        <ul class="ingestion-list" id="ingestion-stats">
          <li class="ingestion-item">
            <span class="ingestion-label"><i class="fas fa-spinner fa-spin"></i> Loading...</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Recent Data Ingestion -->
    <div class="data-container">
      <div class="data-header">
        <h3><i class="fas fa-history"></i> Recent Data Ingestion</h3>
        <button class="refresh-btn" onclick="loadRecentIngestion()">
          <i class="fas fa-sync"></i> Refresh
        </button>
      </div>
      <div class="data-body">
        <table class="data-table">
          <thead>
            <tr>
              <th>Timestamp</th>
              <th>Room ID</th>
              <th>Heart Rate (bpm)</th>
              <th>Breath Rate (bpm)</th>
              <th>Distance (cm)</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody id="recent-ingestion-body">
            <tr>
              <td colspan="6" class="text-center" style="padding: 20px; color: #6c757d;">
                <i class="fas fa-spinner fa-spin"></i> Loading recent data...
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Load and display service status
    async function loadServiceStatus() {
      try {
        const response = await fetch('/api/vitals/status');
        const data = await response.json();
        
        const statusEl = document.getElementById('service-status');
        const timeEl = document.getElementById('service-status-time');
        
        if (data.healthy) {
          statusEl.innerHTML = '<span class="status-badge status-healthy"><i class="fas fa-check-circle"></i> Healthy</span>';
        } else {
          statusEl.innerHTML = '<span class="status-badge status-unhealthy"><i class="fas fa-times-circle"></i> Unhealthy</span>';
        }
        
        timeEl.textContent = new Date(data.lastCheck).toLocaleString('id-ID');
      } catch (err) {
        console.error('Error loading service status:', err);
        document.getElementById('service-status').innerHTML = '<span class="status-badge status-unhealthy">‚ùå Error</span>';
      }
    }

    // Load ingestion statistics
    async function loadIngestionStats() {
      try {
        const response = await fetch('/api/vitals/ingestion-stats');
        const data = await response.json();
        
        const stats = [
          { label: 'Total Entries Today', value: data.totalEntries || 0 },
          { label: 'Active Rooms', value: data.activeRooms || 0 },
          { label: 'Average Heart Rate', value: data.avgHeartRate ? Math.round(data.avgHeartRate) + ' bpm' : 'N/A' },
          { label: 'Average Breath Rate', value: data.avgBreathRate ? Math.round(data.avgBreathRate) + ' bpm' : 'N/A' },
          { label: 'Fall Events Today', value: data.fallEvents || 0 }
        ];

        document.getElementById('ingestion-stats').innerHTML = stats.map(stat => 
          `<li class="ingestion-item">
            <span class="ingestion-label">${stat.label}</span>
            <span class="ingestion-value">${stat.value}</span>
          </li>`
        ).join('');
      } catch (err) {
        console.error('Error loading ingestion stats:', err);
        document.getElementById('ingestion-stats').innerHTML = `
          <li class="ingestion-item">
            <span class="ingestion-label">Error loading statistics</span>
          </li>
        `;
      }
    }

    // Load recent ingestion data
    async function loadRecentIngestion() {
      try {
        const response = await fetch('/api/vitals/recent-ingestion');
        const data = await response.json();
        
        const tbody = document.getElementById('recent-ingestion-body');
        
        if (!data.entries || data.entries.length === 0) {
          tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No data available</td></tr>';
          return;
        }

        tbody.innerHTML = data.entries.map(entry => `
          <tr>
            <td>${new Date(entry.timestamp).toLocaleString('id-ID')}</td>
            <td><strong>${entry.room_id}</strong></td>
            <td>${entry.heart_rate || '-'}</td>
            <td>${entry.breath_rate || '-'}</td>
            <td>${entry.distance || '-'}</td>
            <td><span class="status-badge status-${entry.type === 'fall' ? 'danger' : 'success'}">${entry.type}</span></td>
          </tr>
        `).join('');
      } catch (err) {
        console.error('Error loading recent ingestion:', err);
        document.getElementById('recent-ingestion-body').innerHTML = `
          <tr><td colspan="6" class="text-center text-danger">Error loading data</td></tr>
        `;
      }
    }

    // Load MQTT configuration
    async function loadMQTTConfig() {
      try {
        const response = await fetch('/api/vitals/mqtt-config');
        const config = await response.json();
        
        document.getElementById('mqtt-url').value = config.mqtt_url || '';
        document.getElementById('mqtt-username').value = config.mqtt_username || '';
        document.getElementById('mqtt-password').value = config.mqtt_password || '';
        document.getElementById('fallback-emr').value = config.fallback_emr || '';
      } catch (err) {
        console.error('Error loading MQTT config:', err);
        showAlert('Error loading MQTT configuration', 'danger');
      }
    }

    // Save MQTT configuration
    document.getElementById('mqtt-config-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const config = {
        mqtt_url: document.getElementById('mqtt-url').value,
        mqtt_username: document.getElementById('mqtt-username').value,
        mqtt_password: document.getElementById('mqtt-password').value,
        fallback_emr: document.getElementById('fallback-emr').value
      };

      try {
        const response = await fetch('/api/vitals/mqtt-config', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(config)
        });

        const result = await response.json();
        if (result.success) {
          showAlert('Configuration saved successfully', 'success');
        } else {
          showAlert(result.message || 'Error saving configuration', 'danger');
        }
      } catch (err) {
        console.error('Error saving config:', err);
        showAlert('Error saving configuration', 'danger');
      }
    });

    // Show alert
    function showAlert(message, type) {
      const alertsContainer = document.getElementById('alerts-container');
      const alert = document.createElement('div');
      alert.className = `alert alert-${type}`;
      alert.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> ${message}`;
      alertsContainer.appendChild(alert);
      setTimeout(() => alert.remove(), 5000);
    }

    // Initialize
    window.addEventListener('load', () => {
      loadMQTTConfig();
      loadServiceStatus();
      loadIngestionStats();
      loadRecentIngestion();

      // Refresh every 30 seconds
      setInterval(() => {
        loadServiceStatus();
        loadIngestionStats();
        loadRecentIngestion();
      }, 30000);
    });
  </script>
</body>
</html>
