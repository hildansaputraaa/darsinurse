<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manajemen Ruangan - Darsinurse</title>
  <link rel="icon" type="image/png" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>üè•</text></svg>">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <style>
    :root {
      --primary-green: #00B14F;
      --secondary-teal: #20c997;
      --primary-blue: #0056b3;
      --danger-red: #dc3545;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Inter', 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      overflow-x: hidden;
    }

    .top-header {
      background: rgba(255, 255, 255, 0.95);
      padding: 1rem;
      box-shadow: 0 2px 15px rgba(0,0,0,0.08);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo-info i {
      font-size: 32px;
      color: var(--primary-green);
    }

    .logo-info h1 {
      font-size: 20px;
      font-weight: 800;
      color: #1a3a3a;
      margin: 0;
      line-height: 1.2;
    }

    .logo-info small {
      display: block;
      font-size: 11px;
      color: #6c757d;
      margin-top: 2px;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 13px;
      flex-wrap: wrap;
    }

    .user-info a {
      color: var(--primary-blue);
      text-decoration: none;
      font-weight: 600;
      padding: 6px 10px;
      border-radius: 8px;
      white-space: nowrap;
    }

    .user-info a:hover {
      color: var(--primary-green);
      background: rgba(0,177,79,0.1);
    }

    .main-container {
      padding: 15px;
    }

    .page-title {
      background: rgba(255, 255, 255, 0.95);
      padding: 15px;
      border-radius: 12px;
      box-shadow: 0 2px 15px rgba(0,0,0,0.08);
      margin-bottom: 15px;
    }

    .page-title h2 {
      margin: 0 0 12px 0;
      color: #1a3a3a;
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 700;
      font-size: 18px;
    }

    .page-title h2 i {
      color: var(--primary-green);
      font-size: 22px;
    }

    .search-container {
      display: flex;
      gap: 8px;
      margin-bottom: 10px;
      position: relative;
    }

    .search-input {
      flex: 1;
      padding: 10px 12px 10px 38px;
      border: 1px solid #e0e0e0;
      border-radius: 20px;
      font-size: 14px;
      transition: all 0.2s;
      background: rgba(255,255,255,0.8);
    }

    .search-input:focus {
      border-color: var(--primary-green);
      box-shadow: 0 0 0 2px rgba(0,177,79,0.1);
      outline: none;
      background: white;
    }

    .search-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #6c757d;
      font-size: 14px;
      pointer-events: none;
    }

    .btn-add-room {
      background: var(--primary-green);
      border: none;
      padding: 10px 20px;
      border-radius: 10px;
      color: white;
      font-weight: 700;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 16px rgba(0,177,79,0.25);
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .btn-add-room:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(0,177,79,0.35);
      background: #00a143;
    }

    .room-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      overflow: hidden;
      margin-bottom: 15px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      animation: fadeInUp 0.5s ease-out forwards;
      opacity: 0;
      transform: translateY(15px);
      border: 1px solid rgba(0, 177, 79, 0.1);
      display: flex;
      flex-direction: column;
    }

    .room-card:nth-child(1) { animation-delay: 0.05s; }
    .room-card:nth-child(2) { animation-delay: 0.1s; }
    .room-card:nth-child(3) { animation-delay: 0.15s; }
    .room-card:nth-child(4) { animation-delay: 0.2s; }
    .room-card:nth-child(5) { animation-delay: 0.25s; }
    .room-card:nth-child(6) { animation-delay: 0.3s; }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .room-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      border-color: var(--primary-green);
    }

    .room-header {
      padding: 14px 16px;
      color: white;
      position: relative;
    }

    .room-header.occupied {
      background: linear-gradient(135deg, var(--primary-green) 0%, var(--secondary-teal) 100%);
    }

    .room-header.empty {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      color: #6c757d;
    }

    .room-status-badge {
      position: absolute;
      top: 12px;
      right: 12px;
      background: rgba(255,255,255,0.95);
      color: #495057;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 10px;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    .room-id {
      font-size: 18px;
      font-weight: 700;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 8px;
      padding-right: 70px;
    }

    .room-body {
      padding: 14px 16px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .info-row {
      display: flex;
      align-items: flex-start;
      gap: 10px;
      margin-bottom: 8px;
      padding: 10px 12px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 3px solid var(--primary-green);
      transition: all 0.2s;
    }

    .info-row:hover {
      background: #e9ecef;
      transform: translateX(2px);
    }

    .info-row i {
      color: var(--primary-green);
      width: 16px;
      text-align: center;
      font-size: 13px;
      margin-top: 2px;
      flex-shrink: 0;
    }

    .info-label {
      font-weight: 600;
      color: #6c757d;
      min-width: 60px;
      font-size: 12px;
      flex-shrink: 0;
    }

    .info-value {
      color: #212529;
      font-weight: 600;
      font-size: 13px;
      flex: 1;
      word-break: break-word;
    }

    .room-actions {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
      padding-top: 12px;
      margin-top: auto;
      border-top: 1px solid #e9ecef;
    }

    .btn-room-action {
      padding: 10px 8px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      font-size: 12px;
      color: white;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
    }

    .btn-assign { background: var(--primary-blue); }
    .btn-assign:hover { background: #003d7a; transform: scale(1.02); }

    .btn-remove { background: #fd7e14; }
    .btn-remove:hover { background: #e56910; transform: scale(1.02); }

    .btn-edit { background: #17a2b8; }
    .btn-edit:hover { background: #117a8b; transform: scale(1.02); }

    .btn-delete { background: var(--danger-red); }
    .btn-delete:hover { background: #c82333; transform: scale(1.02); }

    .modal-content {
      border-radius: 15px;
      border: none;
    }

    .modal-header {
      background: linear-gradient(135deg, var(--primary-green) 0%, var(--secondary-teal) 100%);
      color: white;
      border-radius: 15px 15px 0 0;
      padding: 15px 20px;
    }

    .modal-title {
      font-size: 18px;
      font-weight: 700;
    }

    .form-label {
      font-weight: 600;
      color: #1a3a3a;
      margin-bottom: 8px;
      font-size: 14px;
    }

    .form-control, .form-select {
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      padding: 10px 15px;
      font-size: 14px;
    }

    .form-control:focus, .form-select:focus {
      border-color: var(--primary-green);
      box-shadow: 0 0 0 0.2rem rgba(0,177,79,0.15);
    }

    .alert {
      border-radius: 10px;
      border: none;
      padding: 12px 16px;
      margin-bottom: 15px;
      animation: slideDown 0.3s ease;
      font-size: 14px;
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .empty-state {
      text-align: center;
      padding: 40px 20px;
      background: white;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .empty-state i {
      font-size: 48px;
      color: #adb5bd;
      margin-bottom: 15px;
    }

    .empty-state h3 {
      font-size: 20px;
      margin-bottom: 10px;
    }

    .empty-state p {
      color: #6c757d;
      margin-bottom: 20px;
    }

    /* Mobile Optimizations */
    @media (max-width: 768px) {
      .top-header {
        padding: 12px 10px;
      }

      .logo-info {
        gap: 10px;
      }

      .logo-info i {
        font-size: 28px;
      }

      .logo-info h1 {
        font-size: 16px;
      }

      .logo-info small {
        font-size: 10px;
      }

      .user-info {
        font-size: 11px;
        gap: 8px;
        margin-top: 8px;
        width: 100%;
      }

      .user-info span:not(:has(i)) {
        display: none;
      }

      .user-info a {
        padding: 5px 8px;
        font-size: 11px;
      }

      .main-container {
        padding: 10px;
      }

      .page-title {
        padding: 12px;
      }

      .page-title h2 {
        font-size: 16px;
        margin-bottom: 10px;
      }

      .page-title h2 i {
        font-size: 18px;
      }

      .search-container {
        flex-direction: column;
        gap: 8px;
      }

      .search-input {
        width: 100%;
        font-size: 14px;
        padding: 10px 12px 10px 38px;
      }

      .btn-add-room {
        padding: 12px 16px;
        font-size: 14px;
      }

      .room-card {
        margin-bottom: 12px;
      }

      .room-header {
        padding: 12px 14px;
      }

      .room-id {
        font-size: 16px;
        padding-right: 60px;
      }

      .room-status-badge {
        font-size: 9px;
        padding: 3px 8px;
        top: 10px;
        right: 10px;
      }

      .room-body {
        padding: 12px 14px;
      }

      .info-row {
        padding: 8px 10px;
        margin-bottom: 6px;
        flex-wrap: wrap;
      }

      .info-label {
        min-width: 50px;
        font-size: 11px;
      }

      .info-value {
        font-size: 12px;
      }

      .room-actions {
        grid-template-columns: 1fr 1fr;
        gap: 6px;
        padding-top: 10px;
      }

      .btn-room-action {
        padding: 9px 6px;
        font-size: 11px;
        gap: 4px;
      }

      .btn-room-action i {
        font-size: 12px;
      }

      .modal-dialog {
        margin: 10px;
      }

      .modal-body {
        padding: 15px;
      }

      .empty-state {
        padding: 30px 15px;
      }

      .empty-state i {
        font-size: 40px;
      }

      .empty-state h3 {
        font-size: 18px;
      }
    }

    /* Extra small devices */
    @media (max-width: 375px) {
      .logo-info h1 {
        font-size: 14px;
      }

      .page-title h2 {
        font-size: 15px;
      }

      .room-id {
        font-size: 15px;
      }

      .btn-room-action {
        padding: 8px 4px;
        font-size: 10px;
      }
    }
  </style>
</head>
<body>
  <header class="top-header">
    <div class="container-fluid">
      <div class="d-flex justify-content-between align-items-start flex-wrap">
        <div class="logo-info">
          <i class="fas fa-hospital"></i>
          <div>
            <h1>Darsinurse Gateway</h1>
            <small>Manajemen Ruangan</small>
          </div>
        </div>
        <div class="user-info">
          <span><i class="fas fa-user-nurse"></i> Admin</span>
          <span>|</span>
          <a href="/"><i class="fas fa-home"></i> Dashboard</a>
          <span>|</span>
          <a href="/logout" onclick="return confirm('Yakin logout?')"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </div>
    </div>
  </header>

  <div class="container-fluid main-container">
    <div class="page-title">
      <h2><i class="fas fa-door-open"></i> Manajemen Ruangan</h2>
      <div class="search-container">
        <i class="fas fa-search search-icon"></i>
        <input type="text" class="search-input" id="search-rooms" placeholder="Cari ruangan, device, atau pasien...">
      </div>
      <button class="btn btn-add-room" onclick="showAddRoomModal()">
        <i class="fas fa-plus"></i> Tambah Ruangan
      </button>
    </div>

    <div id="alert-container"></div>

    <div class="row" id="rooms-container">
      <div class="col-12 text-center">
        <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;"></div>
        <p class="mt-3 text-muted">Memuat data ruangan...</p>
      </div>
    </div>
  </div>

  <!-- Modal: Add Room -->
  <div class="modal fade" id="addRoomModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fas fa-plus-circle"></i> Tambah Ruangan Baru</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="form-add-room">
            <div class="mb-3">
              <label class="form-label">Room ID <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="add-room-id" placeholder="Contoh: RUANG_001" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Device ID <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="add-device-id" placeholder="Contoh: DEV_001" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Pasien (Opsional)</label>
              <select class="form-select" id="add-emr-no">
                <option value="">-- Ruangan Kosong --</option>
              </select>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Simpan Ruangan
              </button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times"></i> Batal
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: Edit Room -->
  <div class="modal fade" id="editRoomModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Ruangan</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="form-edit-room">
            <input type="hidden" id="edit-old-room-id">
            <div class="mb-3">
              <label class="form-label">Room ID <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="edit-room-id" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Device ID <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="edit-device-id" required>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Ruangan
              </button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times"></i> Batal
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: Assign Patient -->
  <div class="modal fade" id="assignPatientModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="fas fa-user-plus"></i> Masukkan Pasien</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            Ruangan: <strong id="assign-room-display"></strong>
          </div>
          <form id="form-assign-patient">
            <input type="hidden" id="assign-room-id">
            <div class="mb-3">
              <label class="form-label">Pilih Pasien <span class="text-danger">*</span></label>
              <select class="form-select" id="assign-emr-no" required>
                <option value="">-- Pilih Pasien --</option>
              </select>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> Masukkan Pasien
              </button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <i class="fas fa-times"></i> Batal
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showAlert(type, message) {
      const alertContainer = document.getElementById('alert-container');
      const alert = document.createElement('div');
      alert.className = `alert alert-${type} alert-dismissible fade show`;
      alert.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      `;
      alertContainer.appendChild(alert);
      setTimeout(() => alert.remove(), 5000);
    }
    let rooms = [];
    let availablePatients = [];
    const addRoomModal = new bootstrap.Modal(document.getElementById('addRoomModal'));
    const editRoomModal = new bootstrap.Modal(document.getElementById('editRoomModal'));
    const assignPatientModal = new bootstrap.Modal(document.getElementById('assignPatientModal'));


    async function loadRooms() {
      try {
        console.log('üì° Loading rooms...');
        const response = await fetch('/api/rooms');
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const result = await response.json();
        console.log('‚úì Rooms loaded:', result);
        
        if (result.success) {
          rooms = result.rooms || [];
          renderRooms();
        } else {
          showAlert('danger', result.error || 'Gagal memuat data');
          document.getElementById('rooms-container').innerHTML = `
            <div class="col-12">
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> ${result.error}
              </div>
            </div>
          `;
        }
      } catch (error) {
        console.error('‚ùå Load rooms error:', error);
        showAlert('danger', 'Error koneksi: ' + error.message);
        document.getElementById('rooms-container').innerHTML = `
          <div class="col-12">
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-triangle"></i>
              <strong>Error:</strong> ${error.message}
            </div>
          </div>
        `;
      }
    }

    async function loadAvailablePatients() {
      try {
        const response = await fetch('/api/rooms/available-patients');
        if (!response.ok) throw new Error(`HTTP ${response.status}`);
        
        const result = await response.json();
        console.log('‚úì Available patients:', result);
        availablePatients = result.patients || [];
        populatePatientDropdowns();
      } catch (error) {
        console.error('‚ùå Load patients error:', error);
        availablePatients = [];
        showAlert('warning', 'Gagal memuat daftar pasien');
      }
    }

    function populatePatientDropdowns() {
      const addSelect = document.getElementById('add-emr-no');
      const assignSelect = document.getElementById('assign-emr-no');
      
      const options = availablePatients.map(p => 
        `<option value="${p.emr_no}">${p.nama} (EMR: ${p.emr_no})</option>`
      ).join('');
      
      addSelect.innerHTML = '<option value="">-- Ruangan Kosong --</option>' + options;
      assignSelect.innerHTML = '<option value="">-- Pilih Pasien --</option>' + options;
    }

    function renderRooms() {
      const container = document.getElementById('rooms-container');
      
      if (!rooms || rooms.length === 0) {
        container.innerHTML = `
          <div class="col-12">
            <div class="empty-state">
              <i class="fas fa-door-open"></i>
              <h3>Belum Ada Ruangan</h3>
              <p>Tambahkan ruangan baru untuk memulai</p>
              <button class="btn btn-add-room" onclick="showAddRoomModal()" style="max-width: 250px; margin: 0 auto;">
                <i class="fas fa-plus"></i> Tambah Ruangan Pertama
              </button>
            </div>
          </div>
        `;
        return;
      }

      const html = rooms.map(room => {
        const isOccupied = room.emr_no !== null;
        const statusClass = isOccupied ? 'occupied' : 'empty';
        const statusText = isOccupied ? 'TERISI' : 'KOSONG';
        const icon = isOccupied ? 'fa-door-closed' : 'fa-door-open';
        
        return `
          <div class="col-12 col-md-6 col-lg-4">
            <div class="room-card">
              <div class="room-header ${statusClass}">
                <span class="room-status-badge">${statusText}</span>
                <h3 class="room-id"><i class="fas ${icon}"></i> ${room.room_id}</h3>
              </div>
              <div class="room-body">
                <div class="info-row">
                  <i class="fas fa-microchip"></i>
                  <span class="info-label">Device:</span>
                  <span class="info-value">${room.device_id}</span>
                </div>
                ${isOccupied ? `
                  <div class="info-row">
                    <i class="fas fa-user"></i>
                    <span class="info-label">Pasien:</span>
                    <span class="info-value">${room.nama_pasien}</span>
                  </div>
                  <div class="info-row">
                    <i class="fas fa-id-card"></i>
                    <span class="info-label">EMR:</span>
                    <span class="info-value">${room.emr_no}</span>
                  </div>
                  <div class="info-row">
                    <i class="fas fa-hospital"></i>
                    <span class="info-label">Poli:</span>
                    <span class="info-value">${room.poli}</span>
                  </div>
                ` : `
                  <div class="alert alert-secondary mb-0" style="font-size: 13px;">
                    <i class="fas fa-info-circle"></i> Ruangan kosong
                  </div>
                `}
                <div class="room-actions">
                  ${isOccupied ? `
                    <button class="btn-room-action btn-remove" onclick="removePatient('${room.room_id}')">
                      <i class="fas fa-door-open"></i> Keluarkan
                    </button>
                  ` : `
                    <button class="btn-room-action btn-assign" onclick="showAssignModal('${room.room_id}')">
                      <i class="fas fa-user-plus"></i> Masukkan
                    </button>
                  `}
                  <button class="btn-room-action btn-edit" onclick="showEditModal('${room.room_id}', '${room.device_id}')">
                    <i class="fas fa-edit"></i> Edit
                  </button>
                  <button class="btn-room-action btn-delete" onclick="deleteRoom('${room.room_id}')">
                    <i class="fas fa-trash"></i> Hapus
                  </button>
                </div>
              </div>
            </div>
          </div>
        `;
      }).join('');
      
      container.innerHTML = html;
    }

    function showAddRoomModal() {
      document.getElementById('form-add-room').reset();
      loadAvailablePatients();
      addRoomModal.show();
    }

    function showEditModal(roomId, deviceId) {
      document.getElementById('edit-old-room-id').value = roomId;
      document.getElementById('edit-room-id').value = roomId;
      document.getElementById('edit-device-id').value = deviceId;
      editRoomModal.show();
    }

    function showAssignModal(roomId) {
      document.getElementById('assign-room-id').value = roomId;
      document.getElementById('assign-room-display').textContent = roomId;
      loadAvailablePatients();
      assignPatientModal.show();
    }

    document.getElementById('form-add-room').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const roomId = document.getElementById('add-room-id').value.trim();
      const deviceId = document.getElementById('add-device-id').value.trim();
      const emrNo = document.getElementById('add-emr-no').value || null;
      
      if (!roomId || !deviceId) {
        showAlert('warning', 'Room ID dan Device ID harus diisi!');
        return;
      }
      
      try {
        const response = await fetch('/api/rooms/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            room_id: roomId,
            device_id: deviceId,
            emr_no: emrNo
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showAlert('success', 'Ruangan berhasil ditambahkan!');
          addRoomModal.hide();
          document.getElementById('form-add-room').reset();
          loadRooms();
          loadAvailablePatients();
        } else {
          showAlert('danger', result.error || 'Gagal menambahkan ruangan');
        }
      } catch (error) {
        console.error('‚ùå Add room error:', error);
        showAlert('danger', 'Error: ' + error.message);
      }
    });

    document.getElementById('form-edit-room').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const oldRoomId = document.getElementById('edit-old-room-id').value;
      const newRoomId = document.getElementById('edit-room-id').value.trim();
      const newDeviceId = document.getElementById('edit-device-id').value.trim();
      
      if (!newRoomId || !newDeviceId) {
        showAlert('warning', 'Room ID dan Device ID harus diisi!');
        return;
      }
      
      try {
        const response = await fetch(`/api/rooms/${oldRoomId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            new_room_id: newRoomId,
            device_id: newDeviceId
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showAlert('success', 'Ruangan berhasil diupdate!');
          editRoomModal.hide();
          loadRooms();
        } else {
          showAlert('danger', result.error || 'Gagal update ruangan');
        }
      } catch (error) {
        console.error('‚ùå Edit room error:', error);
        showAlert('danger', 'Error: ' + error.message);
      }
    });

    document.getElementById('form-assign-patient').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const roomId = document.getElementById('assign-room-id').value;
      const emrNo = document.getElementById('assign-emr-no').value;
      
      if (!emrNo) {
        showAlert('warning', 'Pilih pasien terlebih dahulu!');
        return;
      }
      
      try {
        const response = await fetch('/api/rooms/assign', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            room_id: roomId,
            emr_no: parseInt(emrNo)
          })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showAlert('success', 'Pasien berhasil dimasukkan ke ruangan!');
          assignPatientModal.hide();
          loadRooms();
          loadAvailablePatients();
        } else {
          showAlert('danger', result.error || 'Gagal memasukkan pasien');
        }
      } catch (error) {
        console.error('‚ùå Assign patient error:', error);
        showAlert('danger', 'Error: ' + error.message);
      }
    });

    async function removePatient(roomId) {
      if (!confirm(`Yakin keluarkan pasien dari ${roomId}?`)) return;
      
      try {
        const response = await fetch('/api/rooms/remove-patient', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ room_id: roomId })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showAlert('success', 'Pasien berhasil dikeluarkan dari ruangan!');
          loadRooms();
          loadAvailablePatients();
        } else {
          showAlert('danger', result.error || 'Gagal mengeluarkan pasien');
        }
      } catch (error) {
        console.error('‚ùå Remove patient error:', error);
        showAlert('danger', 'Error: ' + error.message);
      }
    }

    async function deleteRoom(roomId) {
      const room = rooms.find(r => r.room_id === roomId);
      
      if (room && room.emr_no) {
        showAlert('warning', 'Ruangan masih terisi! Keluarkan pasien terlebih dahulu.');
        return;
      }
      
      if (!confirm(`Yakin hapus ruangan ${roomId}?\n\nRuangan harus kosong.`)) return;
      
      try {
        const response = await fetch('/api/rooms/delete', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ room_id: roomId })
        });
        
        const result = await response.json();
        
        if (result.success) {
          showAlert('success', 'Ruangan berhasil dihapus!');
          loadRooms();
        } else {
          showAlert('danger', result.error || 'Gagal menghapus ruangan');
        }
      } catch (error) {
        console.error('‚ùå Delete room error:', error);
        showAlert('danger', 'Error: ' + error.message);
      }
    }

    function filterRooms() {
      const searchTerm = document.getElementById('search-rooms').value.toLowerCase();
      const roomCards = document.querySelectorAll('.room-card');
      
      roomCards.forEach(card => {
        const text = card.textContent.toLowerCase();
        const matches = text.includes(searchTerm);
        card.closest('.col-12').style.display = matches ? 'block' : 'none';
      });
    }

    // Auto filter on input change
    document.getElementById('search-rooms').addEventListener('input', filterRooms);

    document.addEventListener('DOMContentLoaded', () => {
      console.log('‚úì Page loaded');
      loadRooms();
      loadAvailablePatients();
    });
  </script>
</body>
