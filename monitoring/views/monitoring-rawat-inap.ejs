<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Darsinurse - Monitoring Rawat Inap</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

  <style>
    :root {
      --primary-green: #00B14F;
      --secondary-green: #008a3d;
      --danger-red: #dc3545;
      --warning-orange: #ff9800;
      --light-bg: #f0f8f7;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f5f5f5 0%, #e8f5e9 100%);
      min-height: 100vh;
    }

    /* Header */
    .top-header {
      background: white;
      padding: 1rem 0;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
    }

    .header-content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 2rem;
      max-width: 1800px;
      margin: 0 auto;
    }

    .logo-section {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo-section i {
      font-size: 28px;
      color: var(--primary-green);
    }

    .logo-section h1 {
      font-size: 22px;
      font-weight: 700;
      color: #1a3a3a;
      margin: 0;
    }

    .nav-section {
      display: flex;
      align-items: center;
      gap: 20px;
      font-size: 14px;
    }

    .nav-section a {
      color: #0056b3;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s;
    }

    .nav-section a:hover {
      color: #003d7a;
    }

    /* Main Container */
    .main-container {
      padding-top: 100px;
      padding-bottom: 40px;
      max-width: 1800px;
      margin: 0 auto;
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .view {
      display: none;
    }

    .view.active {
      display: block;
      animation: fadeIn 0.3s;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Page Header */
    .page-header {
      margin-bottom: 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .page-title {
      font-size: 32px;
      font-weight: 700;
      color: #1a3a3a;
      margin-bottom: 8px;
    }

    .page-subtitle {
      font-size: 16px;
      color: #666;
    }

    .back-btn {
      background: var(--primary-green);
      color: white;
      border: none;
      padding: 12px 24px;
      border-radius: 25px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: var(--secondary-green);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 177, 79, 0.3);
    }

    /* Stats Row */
    .stats-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      border-top: 5px solid var(--primary-green);
      transition: all 0.3s;
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }

    .stat-card.danger {
      border-top-color: var(--danger-red);
    }

    .stat-label {
      font-size: 12px;
      color: #999;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .stat-number {
      font-size: 36px;
      font-weight: 700;
      color: var(--primary-green);
    }

    .stat-card.danger .stat-number {
      color: var(--danger-red);
    }

    /* Table Container */
    .patients-table-container {
      background: white;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .table-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      padding-bottom: 15px;
      border-bottom: 2px solid #e0e0e0;
    }

    .table-title {
      font-size: 20px;
      font-weight: 700;
      color: #1a3a3a;
    }

    .search-box {
      position: relative;
      width: 300px;
    }

    .search-box input {
      width: 100%;
      padding: 10px 15px 10px 40px;
      border: 2px solid #e0e0e0;
      border-radius: 25px;
      font-size: 14px;
      transition: all 0.3s;
    }

    .search-box input:focus {
      outline: none;
      border-color: var(--primary-green);
    }

    .search-box i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
    }

    .patients-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      font-size: 13px;
    }

    .patients-table thead th {
      background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
      color: white;
      padding: 12px 10px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: none;
    }

    .patients-table thead th:first-child {
      border-top-left-radius: 10px;
    }

    .patients-table thead th:last-child {
      border-top-right-radius: 10px;
    }

    .patients-table tbody tr {
      transition: all 0.3s;
      cursor: pointer;
      border-bottom: 1px solid #f0f0f0;
    }

    .patients-table tbody tr:hover {
      background: #f8f9fa;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .patients-table tbody td {
      padding: 12px 10px;
      font-size: 13px;
      color: #333;
      vertical-align: middle;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .status-normal {
      background: #d4edda;
      color: #155724;
    }

    .status-detected {
      background: #f8d7da;
      color: #721c24;
      animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }

    .vital-value {
      font-weight: 600;
      color: var(--primary-green);
    }

    .vital-value.warning {
      color: var(--warning-orange);
    }

    .vital-value.danger {
      color: var(--danger-red);
    }

    /* Detail View */
    .detail-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      margin-bottom: 30px;
    }

    .info-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .info-card h3 {
      font-size: 18px;
      font-weight: 700;
      color: #1a3a3a;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid var(--primary-green);
    }

    .info-row {
      display: flex;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #f0f0f0;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-size: 14px;
      color: #666;
      font-weight: 500;
    }

    .info-value {
      font-size: 14px;
      color: #1a3a3a;
      font-weight: 600;
    }

    /* Vital Cards Grid */
    .vital-cards-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .vital-card {
      background: white;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      text-align: center;
      transition: all 0.3s;
      border-left: 4px solid var(--primary-green);
    }

    .vital-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.12);
    }

    .vital-icon {
      font-size: 32px;
      margin-bottom: 10px;
    }

    .vital-label {
      font-size: 11px;
      color: #999;
      text-transform: uppercase;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .vital-number {
      font-size: 24px;
      font-weight: 700;
      color: var(--primary-green);
    }

    .vital-unit {
      font-size: 12px;
      color: #666;
    }

    /* Examination History Table */
    .examination-table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      font-size: 12px;
    }

    .examination-table thead th {
      background: linear-gradient(135deg, var(--primary-green), var(--secondary-green));
      color: white;
      padding: 10px 8px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      border: none;
    }

    .examination-table thead th:first-child {
      border-top-left-radius: 10px;
    }

    .examination-table thead th:last-child {
      border-top-right-radius: 10px;
    }

    .examination-table tbody tr {
      border-bottom: 1px solid #f0f0f0;
    }

    .examination-table tbody tr:hover {
      background: #f8f9fa;
    }

    .examination-table tbody td {
      padding: 10px 8px;
      color: #333;
    }

    /* Charts */
    .charts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
      gap: 30px;
      margin-bottom: 30px;
    }

    .chart-card {
      background: white;
      border-radius: 15px;
      padding: 25px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .chart-title {
      font-size: 16px;
      font-weight: 700;
      color: #1a3a3a;
      margin-bottom: 15px;
      text-align: center;
    }

    /* Loading & Empty States */
    .loading-spinner {
      text-align: center;
      padding: 60px 20px;
    }

    .spinner {
      display: inline-block;
      width: 50px;
      height: 50px;
      border: 5px solid rgba(0, 177, 79, 0.2);
      border-top-color: var(--primary-green);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #999;
    }

    .empty-state i {
      font-size: 64px;
      margin-bottom: 20px;
      color: #ddd;
    }

    .refresh-btn {
      background: var(--primary-green);
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 25px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .refresh-btn:hover {
      background: var(--secondary-green);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 177, 79, 0.3);
    }

    @media (max-width: 1200px) {
      .detail-grid {
        grid-template-columns: 1fr;
      }
      .charts-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 768px) {
      .main-container {
        padding-left: 1rem;
        padding-right: 1rem;
      }
      .table-header {
        flex-direction: column;
        gap: 15px;
      }
      .search-box {
        width: 100%;
      }
      .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }
      .patients-table, .examination-table {
        font-size: 11px;
      }
      .patients-table thead th,
      .patients-table tbody td,
      .examination-table thead th,
      .examination-table tbody td {
        padding: 8px 5px;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="top-header">
    <div class="header-content">
      <div class="logo-section">
        <i class="fas fa-heartbeat"></i>
        <h1>Darsinurse</h1>
      </div>
      <div class="nav-section">
        <span><i class="fas fa-user-circle"></i> <%= nama_perawat %></span>
        <span>|</span>
        <a href="/"><i class="fas fa-home"></i> Dashboard</a>
        <span>|</span>
        <a href="/rooms"><i class="fas fa-door-open"></i> Ruangan</a>
        <span>|</span>
        <a href="/vitals"><i class="fas fa-heartbeat"></i> Vitals API</a>
        <span>|</span>
        <a href="/logout" class="text-danger">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="main-container">
    
    <!-- LIST VIEW -->
    <div id="list-view" class="view active">
      <div class="page-header">
        <div>
          <h1 class="page-title"><i class="fas fa-bed"></i> Monitoring Rawat Inap</h1>
          <p class="page-subtitle">Data pasien yang sedang dirawat inap</p>
        </div>
      </div>

      <div class="stats-row">
        <div class="stat-card">
          <div class="stat-label">Total Pasien</div>
          <div class="stat-number" id="total-patients">0</div>
        </div>
        <div class="stat-card danger">
          <div class="stat-label">Fall Detected</div>
          <div class="stat-number" id="fall-count">0</div>
        </div>
        <div class="stat-card">
          <div class="stat-label">Monitoring Aktif</div>
          <div class="stat-number" id="active-monitoring">0</div>
        </div>
      </div>

      <div class="patients-table-container">
        <div class="table-header">
          <div class="table-title">
            <i class="fas fa-list"></i> Data Pasien Rawat Inap
          </div>
          <div style="display: flex; gap: 15px; align-items: center;">
            <div class="search-box">
              <i class="fas fa-search"></i>
              <input type="text" id="search-input" placeholder="Cari nama atau EMR...">
            </div>
            <button class="refresh-btn" onclick="loadPatients()">
              <i class="fas fa-sync-alt"></i> Refresh
            </button>
          </div>
        </div>

        <div id="table-container" style="overflow-x: auto;">
          <div class="loading-spinner">
            <div class="spinner"></div>
            <p style="margin-top: 20px; color: #999;">Memuat data pasien...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- DETAIL VIEW -->
    <div id="detail-view" class="view">
      <div class="page-header">
        <div>
          <h1 class="page-title"><i class="fas fa-user-injured"></i> Detail Pasien</h1>
          <p class="page-subtitle" id="detail-subtitle">Monitoring detail dan hasil pemeriksaan</p>
        </div>
        <button class="back-btn" onclick="showListView()">
          <i class="fas fa-arrow-left"></i> Kembali
        </button>
      </div>

      <!-- Patient Info Grid -->
      <div class="detail-grid">
        <div class="info-card">
          <h3><i class="fas fa-id-card"></i> Informasi Pasien</h3>
          <div id="patient-info">
            <div class="loading-spinner">
              <div class="spinner"></div>
            </div>
          </div>
        </div>

        <div class="info-card">
          <h3><i class="fas fa-user-md"></i> Penanggung Jawab</h3>
          <div id="medical-staff-info">
            <div class="loading-spinner">
              <div class="spinner"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Real-time Vitals -->
      <div class="info-card" style="margin-bottom: 30px;">
        <h3><i class="fas fa-heartbeat"></i> Tanda Vital Real-time</h3>
        <div class="vital-cards-grid" id="vitals-grid">
          <div class="loading-spinner">
            <div class="spinner"></div>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="info-card" style="margin-bottom: 30px;">
        <h3><i class="fas fa-chart-line"></i> Grafik Monitoring (24 Jam Terakhir)</h3>
        <div class="charts-grid" id="charts-container">
          <div class="loading-spinner">
            <div class="spinner"></div>
          </div>
        </div>
      </div>

      <!-- Examination History -->
      <div class="info-card">
        <h3><i class="fas fa-history"></i> Hasil Pemeriksaan</h3>
        <div style="overflow-x: auto;" id="examinations-container">
          <div class="loading-spinner">
            <div class="spinner"></div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script>
    let allPatients = [];
    let currentPatientEMR = null;
    let charts = {};
    const socket = io();

    // Socket Connection
    socket.on('connect', () => {
      console.log('âœ“ Connected to server');
      loadPatients();
    });

    socket.on('fall-alert', (alert) => {
      console.log('ðŸš¨ Fall alert:', alert);
      loadPatients();
      if (currentPatientEMR === alert.emr_no) {
        loadPatientDetail(currentPatientEMR);
      }
    });

    socket.on('vitals-update', () => {
      if (currentPatientEMR) {
        loadPatientDetail(currentPatientEMR);
      } else {
        loadPatients();
      }
    });

    // ============================================================
    // LIST VIEW FUNCTIONS
    // ============================================================

    async function loadPatients() {
      try {
        const response = await fetch('/api/patients/inpatient/list');
        const data = await response.json();

        if (data.success) {
          allPatients = data.patients;
          displayPatients(allPatients);
          updateStats(allPatients);
        } else {
          console.error('Error:', data.error);
        }
      } catch (err) {
        console.error('Load error:', err);
      }
    }

    function displayPatients(patients) {
      const container = document.getElementById('table-container');

      if (patients.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-info-circle"></i>
            <p>Tidak ada pasien rawat inap</p>
          </div>
        `;
        return;
      }

      const tableHTML = `
        <table class="patients-table">
          <thead>
            <tr>
              <th>EMR</th>
              <th>Nama Pasien</th>
              <th>Alamat</th>
              <th>Tgl Lahir</th>
              <th>JK</th>
              <th>Ruangan</th>
              <th>Poli</th>
              <th>HR (bpm)</th>
              <th>Respirasi</th>
              <th>Jarak Kasur (cm)</th>
              <th>Fall Status</th>
              <th>Perawat</th>
              <th>Dokter</th>
              <th>Update</th>
            </tr>
          </thead>
          <tbody>
            ${patients.map(p => `
              <tr onclick="showDetailView('${p.emr_no}')">
                <td><strong>${p.emr_no}</strong></td>
                <td>${p.nama}</td>
                <td style="max-width: 100px; overflow: hidden; text-overflow: ellipsis;" title="${p.alamat}">${p.alamat}</td>
                <td>${formatDate(p.tanggal_lahir)}</td>
                <td><span class="badge ${p.jenis_kelamin === 'L' ? 'bg-info' : 'bg-warning'}">${p.jenis_kelamin}</span></td>
                <td><span class="badge bg-primary">${p.room_id}</span></td>
                <td>${p.poli}</td>
                <td><span class="vital-value ${getHeartRateClass(p.heart_rate)}">${p.heart_rate}</span></td>
                <td><span class="vital-value ${getRespirasiClass(p.respirasi)}">${p.respirasi}</span></td>
                <td>${p.jarak_kasur_cm}</td>
                <td><span class="status-badge ${p.status_fall.includes('Terdeteksi') ? 'status-detected' : 'status-normal'}">${p.status_fall.includes('Terdeteksi') ? 'ðŸš¨ TERDETEKSI' : 'âœ“ NORMAL'}</span></td>
                <td>${p.nama_perawat}</td>
                <td>${p.nama_dokter}</td>
                <td style="font-size: 11px;">${formatTime(p.waktu)}</td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;

      container.innerHTML = tableHTML;
    }

    function updateStats(patients) {
      document.getElementById('total-patients').textContent = patients.length;
      const fallCount = patients.filter(p => p.status_fall === 'Terdeteksi Fall').length;
      document.getElementById('fall-count').textContent = fallCount;
      document.getElementById('active-monitoring').textContent = patients.length;
    }

    document.getElementById('search-input').addEventListener('input', (e) => {
      const searchTerm = e.target.value.toLowerCase();
      const filtered = allPatients.filter(p => 
        p.nama.toLowerCase().includes(searchTerm) ||
        p.emr_no.toString().includes(searchTerm) ||
        p.room_id.toLowerCase().includes(searchTerm) ||
        p.alamat.toLowerCase().includes(searchTerm)
      );
      displayPatients(filtered);
    });

    // ============================================================
    // DETAIL VIEW FUNCTIONS
    // ============================================================

    function showDetailView(emr_no) {
      currentPatientEMR = emr_no;
      document.getElementById('list-view').classList.remove('active');
      document.getElementById('detail-view').classList.add('active');
      loadPatientDetail(emr_no);
      loadExaminations(emr_no);
      loadVitalsChart(emr_no);
    }

    function showListView() {
      currentPatientEMR = null;
      document.getElementById('detail-view').classList.remove('active');
      document.getElementById('list-view').classList.add('active');
      
      Object.values(charts).forEach(chart => {
        if (chart) chart.destroy();
      });
      charts = {};
    }

    async function loadPatientDetail(emr_no) {
      try {
        const response = await fetch(`/api/patients/inpatient/${emr_no}`);
        const data = await response.json();

        if (data.success) {
          displayPatientInfo(data.patient);
          displayMedicalStaff(data.patient);
          displayVitals(data.patient, data.vitals);
        }
      } catch (err) {
        console.error('Load detail error:', err);
      }
    }

    function displayPatientInfo(patient) {
      const container = document.getElementById('patient-info');
      const age = calculateAge(patient.tanggal_lahir);
      
      container.innerHTML = `
        <div class="info-row">
          <span class="info-label">EMR No</span>
          <span class="info-value">${patient.emr_no}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Nama Lengkap</span>
          <span class="info-value">${patient.nama}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Tanggal Lahir</span>
          <span class="info-value">${formatDate(patient.tanggal_lahir)} (${age} tahun)</span>
        </div>
        <div class="info-row">
          <span class="info-label">Jenis Kelamin</span>
          <span class="info-value">${patient.jenis_kelamin === 'L' ? 'Laki-laki' : 'Perempuan'}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Alamat</span>
          <span class="info-value">${patient.alamat}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Ruangan</span>
          <span class="info-value"><span class="badge bg-primary">${patient.room_id}</span></span>
        </div>
      `;
    }

    function displayMedicalStaff(patient) {
      const container = document.getElementById('medical-staff-info');
      
      container.innerHTML = `
        <div class="info-row">
          <span class="info-label">ID Kunjungan</span>
          <span class="info-value">${patient.id_kunjungan || '-'}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Perawat</span>
          <span class="info-value">${patient.nama_perawat}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Dokter</span>
          <span class="info-value">${patient.nama_dokter}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Status Kunjungan</span>
          <span class="info-value">
            <span class="badge ${patient.status_kunjungan === 'aktif' ? 'bg-success' : 'bg-secondary'}">
              ${patient.status_kunjungan || '-'}
            </span>
          </span>
        </div>
      `;
    }

    function displayVitals(patient, vitals) {
      const container = document.getElementById('vitals-grid');
      
      container.innerHTML = `
        <div class="vital-card">
          <div class="vital-icon" style="color: #e74c3c;">
            <i class="fas fa-heartbeat"></i>
          </div>
          <div class="vital-label">Heart Rate</div>
          <div class="vital-number ${getHeartRateClass(vitals.heart_rate)}">${vitals.heart_rate || '-'}</div>
          <div class="vital-unit">bpm</div>
        </div>

        <div class="vital-card">
          <div class="vital-icon" style="color: #3498db;">
            <i class="fas fa-lungs"></i>
          </div>
          <div class="vital-label">Respirasi</div>
          <div class="vital-number ${getRespirasiClass(vitals.respirasi)}">${vitals.respirasi || '-'}</div>
          <div class="vital-unit">per menit</div>
        </div>

        <div class="vital-card">
          <div class="vital-icon" style="color: #9b59b6;">
            <i class="fas fa-weight"></i>
          </div>
          <div class="vital-label">Glukosa</div>
          <div class="vital-number">${vitals.glukosa || '-'}</div>
          <div class="vital-unit">mg/dL</div>
        </div>

        <div class="vital-card">
          <div class="vital-icon" style="color: ${vitals.status_fall === 'DETECTED' ? '#e74c3c' : '#27ae60'};">
            <i class="fas fa-user-injured"></i>
          </div>
          <div class="vital-label">Status Fall</div>
          <div style="margin: 5px 0;">
            <span class="status-badge ${vitals.status_fall === 'DETECTED' ? 'status-detected' : 'status-normal'}">
              ${vitals.status_fall}
            </span>
          </div>
          <div class="vital-unit">${formatTime(vitals.waktu)}</div>
        </div>
      `;
    }

    async function loadExaminations(emr_no) {
      try {
        const response = await fetch(`/api/patients/inpatient/${emr_no}/examinations`);
        const data = await response.json();

        if (data.success) {
          displayExaminations(data.examinations);
        }
      } catch (err) {
        console.error('Load examinations error:', err);
      }
    }

    function displayExaminations(examinations) {
      const container = document.getElementById('examinations-container');

      if (examinations.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-info-circle"></i>
            <p>Belum ada hasil pemeriksaan</p>
          </div>
        `;
        return;
      }

      const tableHTML = `
        <table class="examination-table">
          <thead>
            <tr>
              <th>Waktu</th>
              <th>HR (bpm)</th>
              <th>Resp (/min)</th>
              <th>Jarak Kasur (cm)</th>
              <th>Glukosa (mg/dL)</th>
              <th>Berat (kg)</th>
              <th>Tinggi (cm)</th>
              <th>BMI</th>
              <th>Sistolik (mmHg)</th>
              <th>Diastolik (mmHg)</th>
              <th>Fall</th>
            </tr>
          </thead>
          <tbody>
            ${examinations.map(e => `
              <tr>
                <td>${formatDateTime(e.waktu)}</td>
                <td><span class="vital-value ${getHeartRateClass(e.heart_rate)}">${e.heart_rate || '-'}</span></td>
                <td><span class="vital-value ${getRespirasiClass(e.respirasi)}">${e.respirasi || '-'}</span></td>
                <td>${e.jarak_kasur_cm || '-'}</td>
                <td>${e.glukosa || '-'}</td>
                <td>${e.berat_badan_kg || '-'}</td>
                <td>${e.tinggi_badan_cm || '-'}</td>
                <td>${e.bmi || '-'}</td>
                <td>${e.sistolik || '-'}</td>
                <td>${e.diastolik || '-'}</td>
                <td><span class="status-badge ${e.fall_detected === 1 ? 'status-detected' : 'status-normal'}">${e.fall_detected === 1 ? 'YES' : 'NO'}</span></td>
              </tr>
            `).join('')}
          </tbody>
        </table>
      `;

      container.innerHTML = tableHTML;
    }

    async function loadVitalsChart(emr_no) {
      try {
        const response = await fetch(`/api/patients/inpatient/${emr_no}/vitals/chart`);
        const data = await response.json();

        if (data.success && data.vitals.length > 0) {
          displayCharts(data.vitals);
        } else {
          document.getElementById('charts-container').innerHTML = `
            <div class="empty-state">
              <i class="fas fa-chart-line"></i>
              <p>Tidak ada data untuk ditampilkan</p>
            </div>
          `;
        }
      } catch (err) {
        console.error('Chart error:', err);
        document.getElementById('charts-container').innerHTML = '<div class="empty-state"><i class="fas fa-chart-line"></i><p>Tidak ada data grafik</p></div>';
      }
    }

    function displayCharts(vitals) {
      const container = document.getElementById('charts-container');
      container.innerHTML = `
        <div class="chart-card"><div class="chart-title">Heart Rate (bpm)</div><canvas id="heart-rate-chart"></canvas></div>
        <div class="chart-card"><div class="chart-title">Respiratory Rate (/min)</div><canvas id="respiratory-chart"></canvas></div>
        <div class="chart-card"><div class="chart-title">Blood Pressure (mmHg)</div><canvas id="bp-chart"></canvas></div>
        <div class="chart-card"><div class="chart-title">Glucose (mg/dL)</div><canvas id="glucose-chart"></canvas></div>
        <div class="chart-card"><div class="chart-title">Fall Detection</div><canvas id="fall-chart"></canvas></div>
      `;

      const labels = vitals.map(v => formatChartTime(v.waktu));
      
      const opts = {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: { display: false },
          tooltip: { backgroundColor: 'rgba(0, 0, 0, 0.8)', padding: 12 }
        },
        scales: {
          y: { beginAtZero: true, grid: { color: 'rgba(0, 0, 0, 0.05)' } },
          x: { grid: { display: false } }
        }
      };

      // Heart Rate Chart
      charts.hr = new Chart(document.getElementById('heart-rate-chart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Heart Rate',
            data: vitals.map(v => v.heart_rate),
            borderColor: '#e74c3c',
            backgroundColor: 'rgba(231, 76, 60, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: opts
      });

      // Respiratory Rate Chart
      charts.resp = new Chart(document.getElementById('respiratory-chart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Respirasi',
            data: vitals.map(v => v.respirasi),
            borderColor: '#3498db',
            backgroundColor: 'rgba(52, 152, 219, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: opts
      });

      // Blood Pressure Chart
      charts.bp = new Chart(document.getElementById('bp-chart'), {
        type: 'line',
        data: {
          labels,
          datasets: [
            {
              label: 'Sistolik',
              data: vitals.map(v => v.sistolik),
              borderColor: '#e74c3c',
              tension: 0.4
            },
            {
              label: 'Diastolik',
              data: vitals.map(v => v.diastolik),
              borderColor: '#3498db',
              tension: 0.4
            }
          ]
        },
        options: opts
      });

      // Glucose Chart
      charts.glukosa = new Chart(document.getElementById('glucose-chart'), {
        type: 'line',
        data: {
          labels,
          datasets: [{
            label: 'Glukosa',
            data: vitals.map(v => v.glukosa),
            borderColor: '#f39c12',
            backgroundColor: 'rgba(243, 156, 18, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: opts
      });

      // Fall Detection Chart
      charts.fall = new Chart(document.getElementById('fall-chart'), {
        type: 'bar',
        data: {
          labels,
          datasets: [{
            label: 'Fall Detected',
            data: vitals.map(v => v.fall_detected ? 1 : 0),
            backgroundColor: vitals.map(v => v.fall_detected ? '#e74c3c' : '#27ae60')
          }]
        },
        options: { ...opts, scales: { y: { ...opts.scales.y, max: 1 } } }
      });
    }

    // ============================================================
    // HELPER FUNCTIONS
    // ============================================================

    function getHeartRateClass(hr) {
      const rate = parseInt(hr);
      if (isNaN(rate)) return '';
      return (rate > 100 || rate < 60) ? 'danger' : (rate > 90 || rate < 70) ? 'warning' : '';
    }

    function getRespirasiClass(resp) {
      const rate = parseInt(resp);
      if (isNaN(rate)) return '';
      return (rate > 20 || rate < 12) ? 'danger' : (rate > 18 || rate < 14) ? 'warning' : '';
    }

    function formatDate(d) {
      if (!d) return '-';
      return new Date(d).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' });
    }

    function formatTime(t) {
      if (!t) return '-';
      return new Date(t).toLocaleString('id-ID', { day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit' });
    }

    function formatDateTime(t) {
      if (!t) return '-';
      return new Date(t).toLocaleString('id-ID', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' });
    }

    function formatChartTime(t) {
      if (!t) return '';
      return new Date(t).toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' });
    }

    function calculateAge(birth) {
      if (!birth) return '-';
      const b = new Date(birth);
      const t = new Date();
      let age = t.getFullYear() - b.getFullYear();
      if (t.getMonth() - b.getMonth() < 0 || (t.getMonth() - b.getMonth() === 0 && t.getDate() < b.getDate())) age--;
      return age;
    }

    // ============================================================
    // AUTO REFRESH
    // ============================================================

    setInterval(() => {
      if (currentPatientEMR) {
        loadPatientDetail(currentPatientEMR);
      }
    }, 10000);

    setInterval(() => {
      if (!currentPatientEMR) {
        loadPatients();
      }
    }, 30000);

    setInterval(() => {
      if (currentPatientEMR) {
        loadVitalsChart(currentPatientEMR);
      }
    }, 300000);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && currentPatientEMR) {
        showListView();
      }
      if ((e.ctrlKey || e.metaKey) && e.key === 'r') {
        e.preventDefault();
        if (currentPatientEMR) {
          loadPatientDetail(currentPatientEMR);
          loadExaminations(currentPatientEMR);
          loadVitalsChart(currentPatientEMR);
        } else {
          loadPatients();
        }
      }
    });

    loadPatients();
  </script>
